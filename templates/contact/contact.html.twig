{% extends 'base.html.twig' %}
{%form_theme form "bootstrap_4_layout.html.twig"%}


{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1> Formulaire de contact </h1>
<br>
<br>
 {{form_start(form)}}
    <h3>{{form_row(form.nom, {'attr' : {'placeholder': ' Zabili'}})}}</h3>
    <br>
    <h3>{{form_row(form.prenom, {'attr' : {'placeholder': ' Nouhaila'}})}}</h3>
    <br>
    <h3>{{form_row(form.mail, {'attr' : {'placeholder': 'nouhaila.zbl@gmail.com'}})}}</h3>
    <br>
    <h3>{{form_row(form.message, {'attr' : {'placeholder': 'Message '}})}}</h3>
    <br>
    <form method="post" action="">
        <input type="submit" value="Envoyer">
    </form>
    {{form_end(form)}}
</div>
{% endblock %}
